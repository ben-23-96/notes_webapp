{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "frontend",
            "image": "benspeakman/frontend",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 5000,
                    "containerPort": 5000
                }
            ],
            "links": [
                "backend"
            ]
        },
        {
            "name": "backend",
            "image": "benspeakman/backend",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 3000,
                    "containerPort": 3000
                }
            ]
        },
        {
            "name": "nginx",
            "image": "nginx",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "nginxconf",
                    "containerPath": "/etc/nginx/conf.d"
                }
            ],
            "links": [
                "backend",
                "frontend"
            ]
        }
    ],
    "volumes": [
        {
            "name": "nginxconf",
            "host": {
                "sourcePath": "/var/app/current/.platform/nginx"
            }
        }
    ]
}